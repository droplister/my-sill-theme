<style>

  @font-face {
    font-family: 'Domaine-Medium';
    src: url({{ 'DomaineTextWeb-Medium.woff2' | asset_url }}) format("woff2"),
         url({{ 'DomaineTextWeb-Medium.woff' | asset_url }}) format("woff");
  }

  @font-face {
    font-family: 'Domaine-Regular';
    src: url({{ 'DomaineTextWeb-Regular.woff2' | asset_url }}) format("woff2"),
         url({{ 'DomaineTextWeb-Regular.woff' | asset_url }}) format("woff");
  }

  :root {
    --color-accent: {{ settings.color_accent }};
    --color-body-text: {{ settings.color_body_text }};
    --color-main-background: {{ settings.color_main_bg }};
    --color-border: {{ settings.color_body_text | color_lighten: 50 }};

    --font-heading: 'Domaine-Medium', helvetica, sans-serif;
    --font-body:'Domaine-Regular', helvetica, sans-serif;
    --font-body-weight: 'normal';
    --font-body-style: 'normal';
    --font-body-bold-weight: 'bold';
  }
</style>